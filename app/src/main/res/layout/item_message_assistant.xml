<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="start"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ai_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_ai_avatar"
        android:contentDescription="@string/ai_assistant" />

    <TextView
        android:id="@+id/message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_message_assistant"
        android:padding="12dp"
        android:textColor="@color/app_text"
        android:textSize="14sp"
        android:maxWidth="280dp"
        android:text="AI助手消息示例" />

    <ImageButton
        android:id="@+id/copy_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/copy"
        android:src="@android:drawable/ic_menu_share"
        app:tint="@color/app_text_secondary" />

</LinearLayout>

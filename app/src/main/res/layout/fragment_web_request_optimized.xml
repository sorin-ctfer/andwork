<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg">

    <!-- 请求配置区域 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/request_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- URL输入 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/url_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/url_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- HTTP方法 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="请求方法"
                android:textColor="@color/app_text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/method_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:minHeight="48dp" />

            <!-- 请求头 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="请求头"
                    android:textColor="@color/app_text"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_header_button"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ 添加"
                    android:textColor="@color/app_primary" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/headers_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:id="@+id/no_headers_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="暂无请求头"
                android:textColor="@color/app_text_secondary"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="12dp"
                android:visibility="visible" />

            <!-- 请求体 -->
            <TextView
                android:id="@+id/body_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="请求体"
                android:textColor="@color/app_text"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <RadioGroup
                android:id="@+id/body_type_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/body_type_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="表单"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/body_type_json"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="JSON" />

                <RadioButton
                    android:id="@+id/body_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="文本" />

                <RadioButton
                    android:id="@+id/body_type_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="文件" />
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/body_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="请求体内容"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/body_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:maxLines="6"
                    android:gravity="top" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/file_upload_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_file_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="选择文件"
                    android:textColor="@color/app_text" />

                <TextView
                    android:id="@+id/selected_file_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="未选择文件"
                    android:textColor="@color/app_text_secondary"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:background="@color/app_surface" />
            </LinearLayout>

            <!-- 按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/send_button"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="发送"
                    android:textColor="@color/app_on_primary"
                    app:backgroundTint="@color/app_primary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/history_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="历史"
                    android:textColor="@color/app_text" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 响应显示区域 -->
    <LinearLayout
        android:id="@+id/response_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/app_surface"
        android:visibility="gone">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/response_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_surface"
            app:tabTextColor="@color/app_text_secondary"
            app:tabSelectedTextColor="@color/app_primary" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/response_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/result_placeholder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="响应结果将显示在这里"
        android:textColor="@color/app_text_secondary"
        android:textSize="13sp"
        android:gravity="center"
        android:padding="32dp"
        android:background="@color/app_surface" />

</LinearLayout>

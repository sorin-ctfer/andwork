<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_surface">

    <!-- 连接状态栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/app_bg"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:elevation="2dp">

        <TextView
            android:id="@+id/connection_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="连接中..."
            android:textColor="@color/app_text"
            android:textSize="13sp"
            android:fontFamily="monospace" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_disconnect"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="断开"
            android:textSize="12sp"
            android:insetTop="0dp"
            android:insetBottom="0dp" />
    </LinearLayout>

    <!-- 终端区域 - 包含输出和输入 -->
    <ScrollView
        android:id="@+id/ssh_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scrollbars="vertical"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/ssh_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 历史输出 -->
            <TextView
                android:id="@+id/ssh_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textColor="@color/app_text"
                android:textSize="13sp"
                android:fontFamily="monospace"
                android:textIsSelectable="true"
                android:lineSpacingExtra="2dp" />

            <!-- 当前输入行 -->
            <LinearLayout
                android:id="@+id/input_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/ssh_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_text"
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:background="@null"
                    android:inputType="textNoSuggestions|textVisiblePassword"
                    android:imeOptions="actionDone"
                    android:paddingStart="0dp"
                    android:paddingEnd="4dp"
                    android:minHeight="24dp"
                    android:gravity="top"
                    android:enabled="false" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 快捷按键栏 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bg"
        android:scrollbars="none"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ssh_key_tab"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:text="Tab"
                android:textSize="12sp"
                android:minWidth="60dp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ssh_key_ctrl_c"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:text="Ctrl+C"
                android:textSize="12sp"
                android:minWidth="70dp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ssh_key_ctrl_d"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:text="Ctrl+D"
                android:textSize="12sp"
                android:minWidth="70dp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ssh_key_clear"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="清屏"
                android:textSize="12sp"
                android:minWidth="60dp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
